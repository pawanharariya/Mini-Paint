<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/color_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_green" />

    <RadioButton
        android:id="@+id/color_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_blue" />

    <RadioButton
        android:id="@+id/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_white" />

    <RadioButton
        android:id="@+id/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_black" />

    <RadioButton
        android:id="@+id/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_red" />

    <RadioButton
        android:id="@+id/color_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_yellow" />

    <RadioButton
        android:id="@+id/color_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_orange" />

    <RadioButton
        android:id="@+id/color_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:buttonTint="@color/paint_purple" />
</RadioGroup>